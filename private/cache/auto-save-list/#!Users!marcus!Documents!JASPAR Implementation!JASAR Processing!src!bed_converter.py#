from timeit import timeit
import pandas as pd
import csv

start = timeit()

df = pd.read_csv("../Database/MA0499.1.tsv", delimiter="\t", index_col=False, usecols=[0,1,2,3,4,6],
                 names=["chr","chrStart", "chrStop", "TF", "score", "strand"], skiprows=[0])
print("DONE")
def chrFormat(chr):
    try:
        chr_num = int(chr[3:])
        if chr_num < 10:
            return "chr{}".format(chr_num)
        else:
            return chr
    except Exception as e:
        return chr

#df["chr"] = df.chr.apply(chrFormat)

def chrNumber(chr):
    try:
        chr_num = int(chr[3:])
        return chr_num
    except Exception as e:
        if chr[3:] == "X":
            return 23
        else:
            return 24

#df["chrNum"] = df.chr.apply(chrNumber)

df.sort_values(by=["chr", "chrStart"], axis=0, inplace=True)
print("SORTED")

df.to_csv("output.bed", sep="\t")

end = timeit()
print(end-start)